
<div class="container">
  <div class="ride">
    <% @rides.each do|ride| %>
    <p>
      <%= ride.title %>
    </p>
      <%= link_to "Bookings for this ride",ride_bookings_path(ride) %>
      <% if ride.photo.attached? %>
        <%= cl_image_tag ride.photo.key, height: 200, width: 400, crop: :fill %>
      <% end %>

<% end %>
</div>
</div>
